{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@backend-jobs/shared": ["./packages/shared/src"]
    }
  },
  "include": ["prisma/**/*"],

  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
